<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @photo.image %>"></dd>

  <dt>Caption</dt>
  <dd>
    <p><%= @photo.caption %></p>
  </dd>

  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo" method="post">
      <label for="image">Image</label>
      <input type="text" id="image" name="image" value="<%= @photo.image %>">

      <label for="caption">Caption</label>
      <textarea name="caption" id="caption"><%= @photo.caption %></textarea>

      <input type="hidden" name="user_id" value="<%= @photo.owner_id %>">
      <input type="hidden" name="photo_id" value="<%= @photo.id %>">

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo">Delete this photo</a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>

      <td>
        <%= comment.body %>
      </td>

      <td>
        <%= comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>
<form action="/add_comment" method="post">
  <label for="photo_id">Photo ID</label>
  <input type="text" id="photo_id" name="photo_id" value="<%= @photo.id %>">

  <label for="author_id">Author ID</label>
  <input type="text" name="author_id" id="author_id" placeholder="Enter your author ID">

  <label for="comment">Comment</label>
  <textarea name="comment" id="comment" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
